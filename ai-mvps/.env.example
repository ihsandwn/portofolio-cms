# AI Products Environment Configuration Template
# Copy this to .env.local and fill in your values

# ================================================================================
# Gemini AI Configuration (REQUIRED for all environments)
# ================================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# ================================================================================
# Environment Mode
# ================================================================================
# Set to 'production' to enable database features
# Set to 'development' (or leave unset) for stateless local development
NODE_ENV=development

# ================================================================================
# Supabase Configuration (PRODUCTION ONLY)
# ================================================================================
# Only required when NODE_ENV=production
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# ================================================================================
# MongoDB Configuration (PRODUCTION ONLY)
# ================================================================================
# Only required when NODE_ENV=production
# Get this from MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=ai_products

# ================================================================================
# Laravel CMS Integration (OPTIONAL)
# ================================================================================
# Only needed if integrating with Laravel CMS
NEXT_PUBLIC_LARAVEL_API_URL=http://localhost:8000
